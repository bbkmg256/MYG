<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>MYG</groupId>
	<artifactId>MYG</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<!-- Variables -->	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.release>21</maven.compiler.release>
		<maven.compiler.version>3.13.0</maven.compiler.version>
		<hibernate.orm.version>6.6.9.Final</hibernate.orm.version>
		<javafx.maven.plugin.version>0.0.8</javafx.maven.plugin.version>
		<javafx.depend.version>23-ea+20</javafx.depend.version> <!-- Version nueva -->
	</properties>
	
	<!-- Dependencias -->
	<dependencies>
		<!-- Driver de Postgres (BD) -->
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>42.7.4</version>
			<type>jar</type>
		</dependency>
		
		<!-- Dependencias de Hibernate (ORM) -->
		<dependency>
			<groupId>org.hibernate.orm</groupId>
			<artifactId>hibernate-core</artifactId>
			<version>${hibernate.orm.version}</version>
		</dependency>
		
		<!-- Dependencias Jakarta EE (JPA) -->
		<dependency>
			<groupId>jakarta.persistence</groupId>
			<artifactId>jakarta.persistence-api</artifactId>
			<version>3.1.0</version>
		</dependency>
		<dependency>
			<groupId>jakarta.transaction</groupId>
			<artifactId>jakarta.transaction-api</artifactId>
			<version>2.0.0</version>
		</dependency>
		
		<!-- Dependencias de JavaFX -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.depend.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.depend.version}</version>
		</dependency>
		<dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>${javafx.depend.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>${javafx.depend.version}</version>
        </dependency>
	</dependencies>
	
	<!-- Zona de compilación y contrucción -->
	<build>
	<!-- Plugins -->
		<plugins>
			<!-- Plugin de compilación para Maven -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>21.0.7</source>  <!-- Versión de Java fuente -->
					<target>21.0.7</target>  <!-- Versión de Java objetivo -->
				</configuration>
			</plugin>
	        
			<!-- Plugin de compilación para JavaFX -->
			<plugin>
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>${javafx.maven.plugin.version}</version>
				<configuration>
					<mainClass>edu.unam.app.App</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>